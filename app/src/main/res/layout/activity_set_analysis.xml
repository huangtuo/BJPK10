<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page"
    >
    <include
        android:id="@id/common_top"
        layout="@layout/activity_common_top" />
    <LinearLayout
        android:id="@+id/analysis_ll_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_10"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_size_5"
            android:paddingBottom="@dimen/common_size_5"
            android:paddingLeft="@dimen/common_size_10"
            android:paddingRight="@dimen/common_size_10"
            android:text="选择数据"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_white"
            android:background="@color/bg_red"
            />
        <com.rx.mvp.zyzj.widget.flowLayout.TagFlowLayout
            android:id="@+id/analysis_flow_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            zhy:max_select="1"
            android:padding="@dimen/common_size_10"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/analysis_ll_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_10"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_size_5"
            android:paddingBottom="@dimen/common_size_5"
            android:paddingLeft="@dimen/common_size_10"
            android:paddingRight="@dimen/common_size_10"
            android:text="选择位置"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_white"
            android:background="@color/bg_red"
            />
        <com.rx.mvp.zyzj.widget.flowLayout.TagFlowLayout
            android:id="@+id/analysis_flow_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            zhy:max_select="1"
            android:padding="@dimen/common_size_10"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/analysis_ll_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_10"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_size_5"
            android:paddingBottom="@dimen/common_size_5"
            android:paddingLeft="@dimen/common_size_10"
            android:paddingRight="@dimen/common_size_10"
            android:text="选择指标"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_white"
            android:background="@color/bg_red"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />
    </LinearLayout>


</LinearLayout>
