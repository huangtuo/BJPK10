<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/buy_img_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/lottery"/>
    <TextView
        android:id="@+id/buy_tv_remindMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/buy_img_remind"
        android:layout_marginLeft="@dimen/common_size_10"
        tools:text="标准版一年，描述语言"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/text_color_black03"
        />
</RelativeLayout>
