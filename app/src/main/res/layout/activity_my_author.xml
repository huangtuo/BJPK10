<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical">

    <include
        android:id="@id/common_top"
        layout="@layout/activity_common_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_size_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本"
            android:textColor="@color/text_color_black03"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/author_tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="预览版"
            android:textColor="@color/text_color_black03"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_1"
        android:background="@color/divider_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_size_15">

        <TextView
            android:id="@+id/author_tv_timeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到期时间"
            android:textColor="@color/text_color_black03"
            android:visibility="gone"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/author_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/text_color_black03"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>
</LinearLayout>
