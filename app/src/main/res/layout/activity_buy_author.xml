<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page"
    >
    <include
        android:id="@id/common_top"
        layout="@layout/activity_common_top" />
    <com.rx.mvp.zyzj.widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_page"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_10"
                android:layout_marginLeft="@dimen/common_size_10"
                android:text="请选择授权类型"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_color_black03"/>
            <com.android.base.widget.NoScrollGridView
                android:id="@+id/buy_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_10"
                android:numColumns="3"
                android:scrollbars="none"
                android:horizontalSpacing="@dimen/common_size_2"
                android:verticalSpacing="@dimen/common_size_5"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_size_2"
                android:layout_marginTop="@dimen/common_size_30"
                >
                <TextView
                    android:id="@+id/buy_tv_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="温馨提示"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/text_color_red"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_size_2"
                    android:background="@color/text_color_red"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/buy_tv_remind"
                    android:layout_marginRight="@dimen/common_size_40"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_size_2"
                    android:background="@color/text_color_red"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/buy_tv_remind"
                    android:layout_marginLeft="@dimen/common_size_40"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/buy_ll_remind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_10"
                android:paddingLeft="@dimen/common_size_20"
                android:paddingRight="@dimen/common_size_5"
                android:orientation="vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_20"
                android:layout_marginBottom="@dimen/common_size_20"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/buy_img_wechat"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/weixin"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信支付"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text_color_black03"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:id="@+id/buy_img_zhi"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/alipay"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝支付"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text_color_black03"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.rx.mvp.zyzj.widget.MyScrollView>
</LinearLayout>
