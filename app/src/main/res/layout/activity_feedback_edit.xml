<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page">
    <include
        android:id="@id/common_top"
        layout="@layout/activity_common_top" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_color_black02"
        android:layout_marginTop="@dimen/common_size_20"
        android:layout_marginLeft="@dimen/common_size_15"
        />
    <com.rx.mvp.zyzj.widget.ContainsEmojiEditText
        android:id="@+id/feedback_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_5"
        android:layout_marginLeft="@dimen/common_size_15"
        android:layout_marginRight="@dimen/common_size_15"
        android:padding="@dimen/common_size_5"
        android:maxLines="2"
        android:maxLength="100"
        android:background="@drawable/edit_rect_bg"
        android:gravity="left"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_color_black03"
        android:hint="请输入反馈标题"
        android:textColorHint="@color/text_color_black04"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_color_black02"
        android:layout_marginTop="@dimen/common_size_20"
        android:layout_marginLeft="@dimen/common_size_15"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_rect_bg"
        android:layout_marginTop="@dimen/common_size_5"
        android:layout_marginLeft="@dimen/common_size_15"
        android:layout_marginRight="@dimen/common_size_15"
        android:padding="@dimen/common_size_5"
        >
        <com.rx.mvp.zyzj.widget.ContainsEmojiEditText
            android:id="@+id/feedback_edit_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:maxLines="5"
            android:maxLength="300"
            android:background="@null"
            android:gravity="left"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_color_black03"
            android:hint="请输入反馈内容"
            android:textColorHint="@color/text_color_black04"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="300字以内"
            android:textColor="@color/text_color_black04"
            android:textSize="@dimen/text_size_12"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/common_size_10"
        android:padding="@dimen/common_size_15"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="增加图片"
            android:textColor="@color/text_color_black02"
            android:textSize="@dimen/text_size_16"
            />
        <GridView
            android:id="@+id/feedback_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_2"
            android:horizontalSpacing="14dp"
            android:scrollbars="none"
            android:numColumns="3"
            >
        </GridView>
    </LinearLayout>

</LinearLayout>
