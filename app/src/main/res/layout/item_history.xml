<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_10"
        android:layout_marginRight="@dimen/common_size_10"
        android:layout_marginLeft="@dimen/common_size_10"
        >
        <TextView
            android:id="@+id/history_tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black03"
            android:textSize="@dimen/text_size_14"
            tools:text="第100期"
            />
        <TextView
            android:id="@+id/history_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_black03"
            android:textSize="@dimen/text_size_14"
            tools:text="2018-07-20  17:07:37"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/history_ll_nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_size_10"
        android:orientation="horizontal"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_1"
        android:background="@color/divider_line"/>

</LinearLayout>
