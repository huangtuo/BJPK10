<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/common_size_40">

    <RelativeLayout
        android:id="@id/common_title_color"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_red">

        <TextView
            android:id="@id/common_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_size_10"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@id/common_left_image"
            android:layout_width="@dimen/common_size_40"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            >

            <ImageView
                android:id="@id/common_left_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:background="@mipmap/back" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@id/common_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18" />

            <ImageView
                android:id="@id/common_title_image"
                android:layout_width="@dimen/common_size_15"
                android:layout_height="@dimen/common_size_15"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_size_3"
                android:src="@mipmap/sjx"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@id/common_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_size_10"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_16" />

        <RelativeLayout
            android:id="@id/common_right_image"
            android:layout_width="@dimen/common_size_40"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:visibility="visible">

            <ImageView
                android:id="@id/common_right_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:background="@mipmap/search" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>