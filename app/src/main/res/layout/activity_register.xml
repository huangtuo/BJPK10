<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@id/common_top"
        layout="@layout/activity_common_top" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_80"
        android:layout_marginLeft="@dimen/common_size_20"
        android:layout_marginRight="@dimen/common_size_20"
        >
        <ImageView
            android:id="@+id/register_img_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/yonghu"/>
        <EditText
            android:id="@+id/register_edit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_size_20"
            android:singleLine="true"
            android:padding="@dimen/common_size_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/register_img_user"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_color_black"
            android:hint="请输入用户名(6-20个字符)"
            android:textColorHint="@color/text_color_black03"
            android:background="@drawable/edit_rect_bg"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_30"
        android:layout_marginLeft="@dimen/common_size_20"
        android:layout_marginRight="@dimen/common_size_20"
        >
        <ImageView
            android:id="@+id/register_img_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/mima"/>
        <EditText
            android:id="@+id/register_edit_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_size_20"
            android:singleLine="true"
            android:padding="@dimen/common_size_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/register_img_psw"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_color_black"
            android:inputType="textPassword"
            android:hint="请输入密码(6-20个字符)"
            android:textColorHint="@color/text_color_black03"
            android:background="@drawable/edit_rect_bg"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_30"
        android:layout_marginLeft="@dimen/common_size_20"
        android:layout_marginRight="@dimen/common_size_20"
        >
        <ImageView
            android:id="@+id/register_img_pswAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/mima"/>
        <EditText
            android:id="@+id/register_edit_pswAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_size_20"
            android:singleLine="true"
            android:padding="@dimen/common_size_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/register_img_pswAgain"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_color_black"
            android:inputType="textPassword"
            android:hint="请再次输入密码(6-20个字符)"
            android:textColorHint="@color/text_color_black03"
            android:background="@drawable/edit_rect_bg"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_40"
        android:layout_marginLeft="@dimen/common_size_20"
        android:layout_marginRight="@dimen/common_size_20"
        android:layout_marginTop="@dimen/common_size_40"
        android:text="注册"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:background="@drawable/red_btn_select"
        />
    <TextView
        android:id="@+id/register_tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_30"
        android:layout_marginRight="@dimen/common_size_20"
        android:layout_gravity="right"
        android:text="已有账号，登录"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_color_red"
        />
</LinearLayout>
