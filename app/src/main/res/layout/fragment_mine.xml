<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_red"
        android:gravity="center">
        <com.rx.mvp.zyzj.widget.CircleImageView xmlns:CircleImageView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mine_img_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/common_size_50"
            android:src="@mipmap/user_photo"
            CircleImageView:border_color="@color/float_transparent"
            CircleImageView:border_width="0dp" />
        <TextView
            android:id="@+id/mine_tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录名"
            android:textSize="@dimen/common_size_15"
            android:textColor="@color/color_white"
            android:layout_marginTop="@dimen/common_size_10"
            android:layout_marginBottom="@dimen/common_size_20"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/mine_ll_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_size_10"
            android:paddingBottom="@dimen/common_size_5"
            android:background="@drawable/white_item_bg_click"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/common_size_60"
                android:layout_height="@dimen/common_size_60"
                android:src="@mipmap/goumai"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_5"
                android:text="购买授权"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_color_black03"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mine_ll_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_size_10"
            android:paddingBottom="@dimen/common_size_5"
            android:background="@drawable/white_item_bg_click"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/common_size_60"
                android:layout_height="@dimen/common_size_60"
                android:src="@mipmap/shouquan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_5"
                android:text="我的授权"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_color_black03"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mine_ll_psw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_size_10"
            android:paddingBottom="@dimen/common_size_5"
            android:background="@drawable/white_item_bg_click"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/common_size_60"
                android:layout_height="@dimen/common_size_60"
                android:src="@mipmap/guanli"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_5"
                android:text="密码管理"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_color_black03"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/mine_ll_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_size_10"
            android:paddingBottom="@dimen/common_size_5"
            android:background="@drawable/white_item_bg_click"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/common_size_60"
                android:layout_height="@dimen/common_size_60"
                android:src="@mipmap/fankui"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_5"
                android:text="意见反馈"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_color_black03"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mine_ll_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_size_10"
            android:paddingBottom="@dimen/common_size_5"
            android:background="@drawable/white_item_bg_click"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/common_size_60"
                android:layout_height="@dimen/common_size_60"
                android:src="@mipmap/women"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_5"
                android:text="关于我们"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_color_black03"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mine_ll_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_size_10"
            android:paddingBottom="@dimen/common_size_5"
            android:background="@drawable/white_item_bg_click"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/common_size_60"
                android:layout_height="@dimen/common_size_60"
                android:src="@mipmap/gengxin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_5"
                android:text="检查更新"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_color_black03"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/mine_btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_size_40"
        android:layout_marginTop="@dimen/common_size_80"
        android:paddingLeft="@dimen/common_size_80"
        android:paddingRight="@dimen/common_size_80"
        android:text="退出登录"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_16"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/red_bg_select"
        />

</LinearLayout>
