<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@id/common_top"
        layout="@layout/activity_common_top" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_30"
        android:layout_marginLeft="@dimen/common_size_20"
        android:layout_marginRight="@dimen/common_size_20"
        android:background="@drawable/edit_rect_bg"
        >
        <ImageView
            android:id="@+id/update_img_oldPsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_size_10"
            android:layout_centerVertical="true"
            android:src="@mipmap/mima"/>
        <EditText
            android:id="@+id/update_edit_oldPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="@dimen/common_size_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/update_img_oldPsw"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_color_black"
            android:inputType="textPassword"
            android:hint="请输入旧密码"
            android:textColorHint="@color/text_color_black04"
            android:background="@null"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_20"
        android:layout_marginLeft="@dimen/common_size_20"
        android:layout_marginRight="@dimen/common_size_20"
        android:background="@drawable/edit_rect_bg"
        >
        <ImageView
            android:id="@+id/update_img_newPsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_size_10"
            android:layout_centerVertical="true"
            android:src="@mipmap/mima"/>
        <EditText
            android:id="@+id/update_edit_newPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="@dimen/common_size_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/update_img_newPsw"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_color_black"
            android:inputType="textPassword"
            android:hint="请输入新密码(6-20个字符)"
            android:textColorHint="@color/text_color_black04"
            android:background="@null"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_20"
        android:layout_marginLeft="@dimen/common_size_20"
        android:layout_marginRight="@dimen/common_size_20"
        android:background="@drawable/edit_rect_bg"
        >
        <ImageView
            android:id="@+id/update_img_newPswAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_size_10"
            android:layout_centerVertical="true"
            android:src="@mipmap/mima"/>
        <EditText
            android:id="@+id/update_edit_newPswAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="@dimen/common_size_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/update_img_newPswAgain"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_color_black"
            android:inputType="textPassword"
            android:hint="请再次输入新密码(6-20个字符)"
            android:textColorHint="@color/text_color_black04"
            android:background="@null"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_40"
        android:layout_marginLeft="@dimen/common_size_20"
        android:layout_marginRight="@dimen/common_size_20"
        android:layout_marginTop="@dimen/common_size_40"
        android:text="确认"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:background="@drawable/red_btn_select"
        />
</LinearLayout>
